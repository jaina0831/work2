{
  "rewrites": [
    { "source": "/api/(.*)",          "destination": "/api/main.py" },
    { "source": "/openapi.json",      "destination": "/api/main.py" },
    { "source": "/(docs|redoc)(.*)",  "destination": "/api/main.py" },
    { "source": "/(.*)",              "destination": "/" }
  ],
  "redirects": [
    { "source": "/docs", "destination": "/api/docs", "permanent": false }
  ]
}
