{
  "builds": [{ "src": "main.py", "use": "@vercel/python" }],
  "routes": [
    { "src": "/openapi.json",           "dest": "main.py" },
    { "src": "/(docs|redoc)(.*)",       "dest": "main.py" },
    { "src": "/static/(.*)",            "dest": "main.py" },
    { "src": "/api/(.*)",               "dest": "main.py" },
    { "src": "/(.*)",                   "dest": "main.py" }
  ]
}
